[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = archlinux-keyring

[Action]
Description = Initialize and populate pacman keyring
When = PreTransaction
Exec = /usr/bin/bash -c '[ -d /etc/pacman.d/gnupg ] || install -d -m 700 -o root -g root /etc/pacman.d/gnupg; /usr/bin/pacman-key --init; /usr/bin/pacman-key --populate archlinux'